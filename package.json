    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "mongodb": "^6.0.0",
    "mongoose": "^7.5.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "dotenv": "^16.4.5",
    "nodemon": "^3.0.1"
  }
}
