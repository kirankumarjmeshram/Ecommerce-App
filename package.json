{
  "name": "ecommerce-app",
  "version": "1.0.0",
  "description": "E-commerce application using MERN Stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
